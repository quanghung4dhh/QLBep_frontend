<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0" style="-fx-background-color: #ecf0f1;" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controllers.StaffController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="QUẢN LÝ NHÂN SỰ" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          
            <Tab text="Danh sách nhân viên">
            <content>
              <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="stats-card">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Mã NV" textFill="#7f8c8d" />
                                    <TextField fx:id="txtMaNV" prefWidth="100.0" styleClass="input-field" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Họ và tên" textFill="#7f8c8d" />
                                    <TextField fx:id="txtTenNV" styleClass="input-field" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Vai trò" textFill="#7f8c8d" />
                                    <ComboBox fx:id="cbVaiTro" prefWidth="150.0" styleClass="input-field" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Số điện thoại" textFill="#7f8c8d" />
                                    <TextField fx:id="txtSDT" prefWidth="120.0" styleClass="input-field" />
                                 </children>
                              </VBox>
                              <Button mnemonicParsing="false" prefHeight="38.0" prefWidth="100.0" styleClass="action-btn" text="+ Thêm">
                                 <HBox.margin>
                                    <Insets top="20.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>

                        <TableView fx:id="tblNhanVien" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn prefWidth="100.0" text="Mã NV" />
                            <TableColumn prefWidth="250.0" text="Họ và Tên" />
                              <TableColumn prefWidth="150.0" text="Vai Trò" />
                              <TableColumn prefWidth="150.0" text="SĐT" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
            </content>
          </Tab>

          <Tab text="Phân công ca">
            <content>
                  <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="stats-card">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <ComboBox fx:id="cbNhanVienPC" promptText="Chọn nhân viên" styleClass="input-field" />
                              <ComboBox fx:id="cbCaTruc" promptText="Chọn ca trực" styleClass="input-field" />
                              <DatePicker fx:id="dpNgayTruc" promptText="Ngày trực" styleClass="input-field" />
                              <Button mnemonicParsing="false" styleClass="action-btn" text="Xác nhận phân công" />
                           </children>
                        </HBox>
                        <TableView fx:id="tblPhanCong" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn prefWidth="200.0" text="Nhân viên" />
                              <TableColumn prefWidth="150.0" text="Ca trực" />
                              <TableColumn prefWidth="150.0" text="Ngày trực" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
            </content>
          </Tab>

            <Tab text="Chấm công">
               <content>
                  <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="stats-card">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <ComboBox fx:id="cbNhanVienCC" promptText="Chọn nhân viên" styleClass="input-field" />
                              <ComboBox fx:id="cbTrangThai" promptText="Trạng thái (Đi làm/Vắng)" styleClass="input-field" />
                              <TextField promptText="Ghi chú lỗi/vắng" styleClass="input-field" HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" styleClass="action-btn" text="Lưu Chấm Công" />
                           </children>
                        </HBox>
                        <TableView fx:id="tblChamCong" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn prefWidth="200.0" text="Nhân viên" />
                              <TableColumn prefWidth="150.0" text="Ngày" />
                              <TableColumn prefWidth="150.0" text="Trạng thái" />
                              <TableColumn prefWidth="200.0" text="Ghi chú" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>

            <Tab text="Bảng lương">
               <content>
                  <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="stats-card">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <ComboBox fx:id="cbNhanVienLuong" promptText="Chọn nhân viên" styleClass="input-field" />
                              <TextField promptText="Lương cơ bản/ngày" styleClass="input-field" />
                              <Button mnemonicParsing="false" styleClass="action-btn" text="Tính Lương" />
                           </children>
                        </HBox>
                        <TableView fx:id="tblLuong" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn prefWidth="200.0" text="Tên Nhân Viên" />
                              <TableColumn prefWidth="150.0" text="Số ngày công" />
                              <TableColumn prefWidth="150.0" text="Lương cơ bản" />
                              <TableColumn prefWidth="150.0" text="Tổng thực nhận" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>

        </tabs>
      </TabPane>
   </children>
</VBox>